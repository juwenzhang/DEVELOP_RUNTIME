{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["ES2016", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "extensions": [".ts", ".js"]
}